{
  "name": "polkadot-sso",
  "version": "1.0.0",
  "description": "Polkadot-based SSO service",
  "type": "commonjs",
  "scripts": {
    "build": "esbuild src/client/challenge.ts --bundle --format=esm --platform=browser --outfile=public/challenge.js",
    "build:client": "tsc -p tsconfig.client.json",
    "build:server": "tsc -p tsconfig.json",
    "build:all": "npm run build:server && npm run build:client",
    "start": "node dist/app.js",
    "dev": "ts-node-dev src/app.ts",
    "demo": "ts-node-dev src/demo/app.ts",
    "demo:credentials": "ts-node src/demo/credentialDemo.ts",
    "demo:kusama": "ts-node src/demo/kusamaTestDemo.ts",
    "demo:security": "ts-node src/demo/securityTestDemo.ts",
    "demo:modular": "ts-node src/demo/modularDemo.ts",
    "demo:wallet": "ts-node src/demo/walletIntegrationDemo.ts",
    "demo:browser": "ts-node src/demo/browserWalletDemo.ts",
    "demo:node": "ts-node src/demo/nodeWalletDemo.ts",
    "demo:wallet-security": "ts-node src/demo/walletSecurityDemo.ts",
    "test:api": "node scripts/test-api.js",
    "setup:kusama": "node scripts/setup-kusama.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "pre-commit": "npm run lint:check && npm run type-check && npm run test:ci",
    "generate-secrets": "node scripts/generate-secrets.js",
    "clean": "rm -rf dist public/js",
    "clean:all": "rm -rf dist public/js node_modules package-lock.json",
    "install:clean": "npm run clean:all && npm install",
    "prepare": "husky"
  },
  "dependencies": {
    "@polkadot/api": "^15.10.2",
    "@polkadot/extension-dapp": "^0.58.3",
    "@polkadot/keyring": "^13.5.5",
    "@polkadot/util": "^13.5.5",
    "@polkadot/util-crypto": "^13.5.5",
    "@types/redis": "^4.0.10",
    "connect-redis": "^8.0.1",
    "cors": "^2.8.5",
    "csurf": "^1.10.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.1",
    "helmet": "^7.1.0",
    "ipfs-http-client": "^60.0.1",
    "isomorphic-dompurify": "^2.21.0",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.7.1",
    "sql-template-strings": "^2.2.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "uuid": "^11.0.5",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.6",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-security": "^2.1.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
