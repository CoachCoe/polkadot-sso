{
  "name": "polkadot-auth",
  "version": "1.0.0",
  "description": "Framework-agnostic Polkadot authentication with SIWE-style messages",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:ci": "npm run test --workspaces",
    "format": "npm run format --workspaces",
    "clean": "npm run clean --workspaces",
    "type-check": "npm run type-check --workspaces",
    "publish-packages": "npm run build && npm publish --workspaces --access public",
    "example:express": "cd examples/express-simple && npm run dev",
    "example:next": "cd examples/next-simple && npm run dev",
    "example:next:build": "cd examples/next-simple && npm run build",
    "example:remix": "cd examples/remix-simple && npm run dev",
    "example:remix:build": "cd examples/remix-simple && npm run build",
    "example:trex": "cd examples/trex-integration && npm run dev",
    "example:trex:build": "cd examples/trex-integration && npm run build",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "validate-env": "node scripts/validate-env.js",
    "sso:build": "cd packages/sso && npm run build",
    "sso:start": "cd packages/sso && npm start",
    "sso:dev": "cd packages/sso && npm run dev"
  },
  "keywords": [
    "polkadot",
    "authentication",
    "wallet",
    "blockchain",
    "sso",
    "kusama",
    "siwe",
    "express",
    "nextjs",
    "react"
  ],
  "author": "Polkadot Auth Team",
  "license": "MIT",
  "dependencies": {
    "@polkadot-api/descriptors": "file:.papi/descriptors",
    "@polkadot-auth/sso": "file:packages/sso"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "esbuild": "^0.25.9",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/polkadot-auth/polkadot-auth.git"
  },
  "bugs": {
    "url": "https://github.com/polkadot-auth/polkadot-auth/issues"
  },
  "homepage": "https://polkadot-auth.dev"
}
