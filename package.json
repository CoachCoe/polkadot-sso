{
  "name": "polkadot-auth",
  "version": "1.0.0",
  "description": "Framework-agnostic Polkadot authentication with SIWE-style messages",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:app": "tsc --project tsconfig.json",
    "start": "node dist/app.js",
    "dev": "npm run build:app && npm start",
    "test": "npm run test --workspaces",
    "format": "npm run format --workspaces",
    "clean": "npm run clean --workspaces",
    "type-check": "npm run type-check --workspaces",
    "publish-packages": "npm run build && npm publish --workspaces --access public",
    "example:express": "cd examples/express-simple && npm run dev",
    "example:next": "cd examples/next-simple && npm run dev",
    "example:next:build": "cd examples/next-simple && npm run build",
    "example:remix": "cd examples/remix-simple && npm run dev",
    "example:remix:build": "cd examples/remix-simple && npm run build",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": [
    "polkadot",
    "authentication",
    "wallet",
    "blockchain",
    "sso",
    "kusama",
    "siwe",
    "express",
    "nextjs",
    "react"
  ],
  "author": "Polkadot Auth Team",
  "license": "MIT",
  "dependencies": {
    "@polkadot/api": "^16.4.6",
    "@polkadot/types": "^16.4.6",
    "@polkadot/util-crypto": "^13.5.6",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.10",
    "sqlite": "^5.0.1",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "esbuild": "^0.25.9",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/polkadot-auth/polkadot-auth.git"
  },
  "bugs": {
    "url": "https://github.com/polkadot-auth/polkadot-auth/issues"
  },
  "homepage": "https://polkadot-auth.dev"
}
