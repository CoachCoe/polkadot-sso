#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run type checking (critical - must pass)
echo "🔧 Checking TypeScript types..."
npm run type-check

# Check formatting (critical - must pass)
echo "🎨 Checking code formatting..."
npm run format:check

# Run linting (warnings only - don't fail commit)
echo "📝 Checking code style (warnings only)..."
npm run lint || echo "⚠️ Linting issues found (non-blocking)"

# Run tests (if they exist)
echo "🧪 Running tests..."
npm test || echo "⚠️ Tests failed (non-blocking)"

echo "✅ Pre-commit checks completed!"
