# Check formatting (critical - must pass)
echo "🎨 Checking code formatting..."
cd apps/sso && npm run build

# Run linting (temporarily disabled due to configuration issues)
echo "📝 Checking code style (temporarily disabled)..."
# npm run lint

# Run tests (temporarily disabled due to test configuration issues)
echo "🧪 Running tests (temporarily disabled)..."
# npm run test:ci

echo "✅ Pre-commit checks completed!"
