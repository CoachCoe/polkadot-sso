{
  "name": "@polkadot-auth/next",
  "version": "0.1.0",
  "description": "Next.js adapter for Polkadot authentication",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@polkadot-auth/core": "file:../core"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0"
  },
  "peerDependencies": {
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": false
    },
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "keywords": [
    "polkadot",
    "authentication",
    "nextjs",
    "sso",
    "wallet",
    "blockchain"
  ],
  "author": "Polkadot Auth Team",
  "license": "MIT"
}
