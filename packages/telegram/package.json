{
  "name": "@polkadot-auth/telegram",
  "version": "0.1.0",
  "description": "Telegram authentication provider for Polkadot SSO",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --module ESNext --outDir dist",
    "build:cjs": "tsc --module CommonJS --outDir dist-cjs && cp dist-cjs/index.js dist/index.cjs.js && cp dist-cjs/*.d.ts dist/",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "polkadot",
    "sso",
    "telegram",
    "authentication",
    "web3",
    "blockchain"
  ],
  "author": "Polkadot Auth Team",
  "license": "MIT",
  "dependencies": {
    "@polkadot-auth/core": "file:../core",
    "@polkadot/api": "^16.4.7",
    "@polkadot/keyring": "^12.6.2",
    "@polkadot/util": "^13.5.6",
    "@polkadot/util-crypto": "^12.6.2",
    "node-telegram-bot-api": "^0.61.0",
    "qrcode": "^1.5.3",
    "telegraf": "^4.15.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.5",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
