{
  "name": "@polkadot-auth/remix",
  "version": "0.1.0",
  "description": "Remix adapter for Polkadot authentication",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "browser": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "browser": {
    "crypto": false,
    "stream": false,
    "util": false,
    "process": false,
    "tweetnacl": false,
    "tweetnacl/nacl-fast": false,
    "@polkadot/util-crypto": false
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --module ESNext --outDir dist",
    "build:cjs": "tsc --module CommonJS --outDir dist-cjs && cp dist-cjs/index.js dist/index.cjs.js && cp dist-cjs/*.d.ts dist/",
    "dev": "tsc --watch",
    "clean": "rm -rf dist dist-cjs",
    "test": "jest",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@polkadot-auth/core": "file:../core",
    "@polkadot-auth/sso": "file:../sso"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0"
  },
  "peerDependencies": {
    "@remix-run/node": "^2.0.0",
    "@remix-run/react": "^2.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "@remix-run/node": {
      "optional": false
    },
    "@remix-run/react": {
      "optional": false
    },
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "keywords": [
    "polkadot",
    "authentication",
    "remix",
    "sso",
    "wallet",
    "blockchain"
  ],
  "author": "Polkadot Auth Team",
  "license": "MIT"
}
