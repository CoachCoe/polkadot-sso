{
  "name": "@polkadot-auth/core",
  "version": "0.1.0",
  "description": "Framework-agnostic core for Polkadot authentication",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "browser": {
    "crypto": false,
    "stream": false,
    "util": false,
    "process": false,
    "tweetnacl": false,
    "tweetnacl/nacl-fast": false,
    "@polkadot/util-crypto": false
  },
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --module ESNext --outDir dist",
    "build:cjs": "tsc --module CommonJS --outDir dist-cjs && cp dist-cjs/index.js dist/index.cjs.js && cp dist-cjs/*.d.ts dist/",
    "dev": "tsc --watch",
    "clean": "rm -rf dist dist-cjs",
    "test": "jest",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "polkadot",
    "authentication",
    "wallet",
    "blockchain",
    "sso",
    "kusama"
  ],
  "author": "Polkadot Auth Team",
  "license": "MIT",
  "dependencies": {
    "@noble/hashes": "^2.0.0",
    "@polkadot/api": "^10.0.0",
    "@polkadot/extension-dapp": "^0.45.0",
    "@polkadot/util": "^12.0.0",
    "@polkadot/util-crypto": "^12.6.2",
    "@types/crypto-js": "^4.2.2",
    "crypto-js": "^4.2.0",
    "polkadot-api": "^1.16.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "@polkadot/api": "^10.0.0",
    "@polkadot/extension-dapp": "^0.45.0",
    "@polkadot/util": "^12.0.0"
  }
}
