{
  "name": "@polkadot-auth/core",
  "version": "0.1.0",
  "description": "Framework-agnostic core for Polkadot authentication",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "polkadot",
    "authentication",
    "wallet",
    "blockchain",
    "sso",
    "kusama"
  ],
  "author": "Polkadot Auth Team",
  "license": "MIT",
  "dependencies": {
    "@polkadot/api": "^10.11.3",
    "@polkadot/extension-dapp": "^0.45.1",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "peerDependencies": {
    "@polkadot/api": "^10.0.0",
    "@polkadot/extension-dapp": "^0.45.0",
    "@polkadot/util": "^12.0.0",
    "@polkadot/util-crypto": "^12.0.0"
  }
}
