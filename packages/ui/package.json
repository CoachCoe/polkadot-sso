{
  "name": "@polkadot-auth/ui",
  "version": "0.1.0",
  "description": "React UI components for Polkadot authentication",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "browser": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "browser": {
    "crypto": false,
    "stream": false,
    "util": false,
    "process": false,
    "tweetnacl": false,
    "tweetnacl/nacl-fast": false,
    "@polkadot/util-crypto": false
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --module ESNext --outDir dist",
    "build:cjs": "tsc --module CommonJS --outDir dist-cjs && cp dist-cjs/index.js dist/index.cjs.js && cp dist-cjs/*.d.ts dist/",
    "dev": "tsc --watch",
    "clean": "rm -rf dist dist-cjs",
    "test": "jest",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "format:check": "prettier --check src/**/*.{ts,tsx}",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@polkadot-auth/core": "file:../core",
    "@polkadot-auth/client-sdk": "file:../client-sdk",
    "@polkadot/extension-dapp": "^0.45.0",
    "@polkadot/util": "^12.0.0",
    "@polkadot/util-crypto": "^12.6.2",
    "crypto-js": "^4.2.0",
    "jose": "^5.1.3"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "keywords": [
    "polkadot",
    "authentication",
    "react",
    "ui",
    "components",
    "wallet",
    "blockchain"
  ],
  "author": "Polkadot Auth Team",
  "license": "MIT"
}
