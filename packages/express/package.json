{
  "name": "@polkadot-auth/express",
  "version": "0.1.0",
  "description": "Express.js adapter for Polkadot authentication",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "browser": {
    "crypto": false,
    "stream": false,
    "util": false,
    "process": false,
    "tweetnacl": false
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --module ESNext --outDir dist",
    "build:cjs": "tsc --module CommonJS --outDir dist-cjs && cp dist-cjs/index.js dist/index.cjs.js && cp dist-cjs/*.d.ts dist/",
    "dev": "tsc --watch",
    "clean": "rm -rf dist dist-cjs",
    "test": "jest",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "polkadot",
    "authentication",
    "express",
    "middleware",
    "wallet",
    "blockchain"
  ],
  "author": "Polkadot Auth Team",
  "license": "MIT",
  "dependencies": {
    "@polkadot-auth/core": "file:../core",
    "@polkadot-auth/sso": "file:../sso",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "peerDependencies": {
    "express": "^4.0.0"
  }
}
